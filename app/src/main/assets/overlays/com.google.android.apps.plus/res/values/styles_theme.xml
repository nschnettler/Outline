<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings -->
    <style name="Theme.Arkham.NormalWhiteActionBar" parent="@*com.google.android.apps.plus:style/Theme.Arkham">
        <item name="android:windowBackground">@*com.google.android.apps.plus:color/quantum_white_100</item>
        <item name="android:actionBarStyle">@*com.google.android.apps.plus:style/Theme.Arkham.NormalWhite.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.BlackOverflow</item>
        <item name="*com.google.android.apps.plus:actionOverflowButtonStyle">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.BlackOverflow</item>
        <item name="*com.google.android.apps.plus:actionBarStyle">@*com.google.android.apps.plus:style/Theme.Arkham.NormalWhite.ActionBar</item>
        <item name="*com.google.android.apps.plus:actionBarTheme">@*com.google.android.apps.plus:style/Theme.Arkham.WhiteActionBarTheme</item>
        <item name="*com.google.android.apps.plus:colorPrimary">#FFFFFF</item>
        <item name="*com.google.android.apps.plus:colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Arkham.WithWhiteActionBar" parent="@*com.google.android.apps.plus:style/Theme.Arkham">
        <item name="android:windowBackground">@*com.google.android.apps.plus:color/quantum_white_100</item>
        <item name="android:actionBarStyle">@*com.google.android.apps.plus:style/Theme.Arkham.White.ActionBar</item>
        <item name="android:actionMenuTextAppearance">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.MenuButtonTextStyle</item>
        <item name="android:actionMenuTextColor">@*com.google.android.apps.plus:color/white_actionbar_done_button_color</item>
        <item name="*com.google.android.apps.plus:actionBarStyle">@*com.google.android.apps.plus:style/Theme.Arkham.White.ActionBar</item>
        <item name="*com.google.android.apps.plus:actionMenuTextAppearance">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.MenuButtonTextStyle</item>
        <item name="*com.google.android.apps.plus:actionMenuTextColor">@*com.google.android.apps.plus:color/white_actionbar_done_button_color</item>
        <item name="*com.google.android.apps.plus:colorPrimary">#FFFFFF</item>
        <item name="*com.google.android.apps.plus:colorPrimaryDark">#FFFFFF</item>
    </style>

    <!-- Community ActionBar -->
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="@*com.google.android.apps.plus:style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <item name="*com.google.android.apps.plus:actionMenuTextColor">?android:textColorPrimaryInverse</item>
        <item name="*com.google.android.apps.plus:actionOverflowButtonStyle">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.BlackOverflow</item>
    </style>
    <!-- ActionBar Text -->
    <style name="Theme.Arkham.ActionBar.Text" parent="@*com.google.android.apps.plus:style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@*com.google.android.apps.plus:dimen/text_size_20</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textColorPrimary">#de000000</item>
    </style>
</resources>
