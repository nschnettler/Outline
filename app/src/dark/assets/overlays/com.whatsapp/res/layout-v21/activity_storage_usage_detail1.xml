<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.whatsapp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@*com.whatsapp:color/divider_gray"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />

            <include
                android:id="@*com.whatsapp:id/text_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/contacts_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/locations_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/image_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/sticker_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/gif_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/video_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/audio_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/documents_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:id="@*com.whatsapp:id/storage_usage_detail_manage"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:elevation="6.0dip">

        <ProgressBar
            android:layout_gravity="center|right"
            android:id="@*com.whatsapp:id/storage_usage_detail_progress_bar"
            android:visibility="gone"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:indeterminate="true"
            style="?android:progressBarStyleLarge" />

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/accent"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:id="@*com.whatsapp:id/storage_usage_detail_manage_text"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@*com.whatsapp:string/storage_usage_detail_free_up_space"
                android:textAllCaps="true"
                app:fontFamily="sans-serif-medium" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:id="@*com.whatsapp:id/clear_layout"
        android:paddingLeft="90.0dip"
        android:paddingRight="24.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:elevation="6.0dip">

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/settings_title_accent"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@*com.whatsapp:id/storage_usage_detail_clear_cancel"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="24.0dip"
                android:text="@*com.whatsapp:string/cancel"
                android:textAllCaps="true"
                app:fontFamily="sans-serif-medium" />
        </FrameLayout>

        <com.whatsapp.WaTextView
            android:textSize="14.0sp"
            android:textColor="@*com.whatsapp:color/red_button_text"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@*com.whatsapp:id/storage_usage_detail_clear"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAllCaps="true"
            app:fontFamily="sans-serif-medium" />
    </LinearLayout>
</LinearLayout>