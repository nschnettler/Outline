<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@*com.whatsapp:id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.5">

        <LinearLayout
            android:orientation="vertical"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@*android:color/background_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.WaTextView
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:paddingLeft="16.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@*com.whatsapp:string/delete_account_header"
                    android:lineSpacingMultiplier="1.0"
                    android:textAllCaps="true"
                    style="@*com.whatsapp:style/Text.Description" />

                <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="16.0dip"
                    android:paddingTop="8.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaTextView
                            android:layout_width="wrap_content"
                            style="@*com.whatsapp:style/Text.Bullet" />

                        <com.whatsapp.WaTextView
                            android:textColor="#b3FFFFFF"
                            android:layout_width="0.0dip"
                            android:text="@*com.whatsapp:string/delete_account_item_1"
                            android:layout_weight="1.0"
                            style="@*com.whatsapp:style/Text.Steps" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaTextView
                            android:layout_width="wrap_content"
                            style="@*com.whatsapp:style/Text.Bullet" />

                        <com.whatsapp.WaTextView
                            android:textColor="#b3FFFFFF"
                            android:layout_width="0.0dip"
                            android:text="@*com.whatsapp:string/delete_account_item_2"
                            android:layout_weight="1.0"
                            style="@*com.whatsapp:style/Text.Steps" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaTextView
                            android:layout_width="wrap_content"
                            style="@*com.whatsapp:style/Text.Bullet" />

                        <com.whatsapp.WaTextView
                            android:textColor="#b3FFFFFF"
                            android:layout_width="0.0dip"
                            android:text="@*com.whatsapp:string/delete_account_item_3"
                            android:layout_weight="1.0"
                            style="@*com.whatsapp:style/Text.Steps" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@*com.whatsapp:id/delete_gdrive_account_warning"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaTextView
                            android:layout_width="wrap_content"
                            style="@*com.whatsapp:style/Text.Bullet" />

                        <com.whatsapp.WaTextView
                            android:textColor="#b3FFFFFF"
                            android:layout_width="0.0dip"
                            android:text="@*com.whatsapp:string/delete_account_item_4"
                            android:layout_weight="1.0"
                            style="@*com.whatsapp:style/Text.Steps" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@*com.whatsapp:id/delete_payments_account_warning"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaTextView
                            android:layout_width="wrap_content"
                            style="@*com.whatsapp:style/Text.Bullet" />

                        <com.whatsapp.WaTextView
                            android:textColor="#b3FFFFFF"
                            android:layout_width="0.0dip"
                            android:text="@*com.whatsapp:string/delete_account_item_5"
                            android:layout_weight="1.0"
                            style="@*com.whatsapp:style/Text.Steps" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@*android:color/background_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip">

                <com.whatsapp.WaTextView
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/delete_account_change_number_option"
                    android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@*com.whatsapp:string/delete_account_change_number_question"
                    android:layout_weight="1.0"
                    style="@*com.whatsapp:style/Text.Description" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@*com.whatsapp:drawable/panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip">

                <com.whatsapp.WaTextView
                    android:textColor="#b3FFFFFF"
                    android:id="@*com.whatsapp:id/delete_account_instructions"
                    android:paddingLeft="16.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingRight="16.0dip"
                    android:layout_width="fill_parent"
                    android:text="@*com.whatsapp:string/delete_account_instructions"
                    android:layout_weight="1.0"
                    style="@*com.whatsapp:style/Text.Description" />

                <com.whatsapp.WaTextView
                    android:textSize="16.0sp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:id="@*com.whatsapp:id/registration_country"
                    android:focusableInTouchMode="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginBottom="12.0dip"
                    android:hint="@*com.whatsapp:string/pick_a_country"
                    android:singleLine="true"
                    android:inputType="none"
                    android:backgroundTint="@*com.whatsapp:color/accent"
                    style="@*com.whatsapp:style/Base.Widget.AppCompat.Spinner.Underlined" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/registration_fields"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layoutDirection="ltr">

                    <com.whatsapp.WaTextView
                        android:textSize="20.0sp"
                        android:textColor="#b3FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />

                    <com.whatsapp.WaEditText
                        android:textSize="16.0sp"
                        android:gravity="center"
                        android:id="@*com.whatsapp:id/registration_cc"
                        android:layout_width="@*com.whatsapp:dimen/enter_phone_number_cc_width"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:digits="\ 0123456789"
                        android:inputType="phone" />

                    <com.whatsapp.WaEditText
                        android:textSize="16.0sp"
                        android:textColor="#ffffffff"
                        android:textColorHint="#b3FFFFFF"
                        android:ellipsize="end"
                        android:id="@*com.whatsapp:id/registration_phone"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:hint="@*com.whatsapp:string/register_phone_your_number"
                        android:singleLine="true"
                        android:selectAllOnFocus="true"
                        android:layout_weight="1.0"
                        android:inputType="phone"
                        android:imeOptions="actionDone" />
                </LinearLayout>

                <com.whatsapp.WaButton
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/registration_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginBottom="12.0dip"
                    android:text="@*com.whatsapp:string/settings_delete_account"
                    style="@*com.whatsapp:style/RedButton" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>