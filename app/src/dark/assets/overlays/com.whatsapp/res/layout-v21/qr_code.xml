<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.whatsapp.qrcode.QrCodeView
        android:layout_gravity="center"
        android:id="@*com.whatsapp:id/camera"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:textSize="20.0dip"
        android:textColor="#ffdddddd"
        android:gravity="center"
        android:id="@*com.whatsapp:id/hint"
        android:background="@*com.whatsapp:color/gray_activity"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@*com.whatsapp:id/hint">

        <View
            android:id="@*com.whatsapp:id/shade"
            android:background="#80000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.whatsapp.qrcode.QrCodeOverlay
            android:id="@*com.whatsapp:id/overlay"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:padding="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@*com.whatsapp:id/education"
                android:background="@*com.whatsapp:drawable/panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.qrcode.QrEducationView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="20.0sp"
                    android:textColor="@*com.whatsapp:drawable/flat_button_text_color"
                    android:gravity="right"
                    android:id="@*com.whatsapp:id/ok"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4.0dip"
                    android:text="@*com.whatsapp:string/ok_got_it"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
