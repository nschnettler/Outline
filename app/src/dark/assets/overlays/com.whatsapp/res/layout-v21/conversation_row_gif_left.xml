<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip">

        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/name_in_group"
                android:paddingLeft="8.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="8.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                    android:textColor="#ffffffff"
                    android:id="@*com.whatsapp:id/name_in_group_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true" />

                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                    android:textColor="#b3FFFFFF"
                    android:id="@*com.whatsapp:id/pushname_in_group_tv"
                    android:paddingLeft="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true" />
            </LinearLayout>

            <FrameLayout
                android:id="@*com.whatsapp:id/quoted_message_holder"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/QuotedFrame" />

            <FrameLayout
                android:padding="@*com.whatsapp:dimen/conversation_video_thumb_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@*com.whatsapp:id/video_containter"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <view
                    android:id="@*com.whatsapp:id/thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    class="com.whatsapp.ConversationRowVideo$RowVideoView" />

                <ImageView
                    android:layout_gravity="bottom|center|left"
                    android:id="@*com.whatsapp:id/gif_attribution"
                    android:paddingLeft="10.0dip"
                    android:paddingBottom="4.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/control_frame"
                    android:background="@*com.whatsapp:drawable/download_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.whatsapp.CircularProgressBar
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/progress_bar"
                        android:visibility="gone"
                        android:layout_width="64.0dip"
                        android:layout_height="64.0dip"
                        android:indeterminateOnly="false"
                        android:indeterminateTint="@*android:color/white"
                        android:indeterminateTintMode="src_atop" />

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/button_image"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@*com.whatsapp:drawable/btn_cancel" />

                    <Button
                        android:textColor="@*com.whatsapp:color/conversation_row_image_text"
                        android:ellipsize="none"
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/control_btn"
                        android:background="@null"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:drawableLeft="@*com.whatsapp:drawable/btn_download"
                        android:drawablePadding="8.0dip"
                        android:stateListAnimator="@null" />
                </FrameLayout>
            </FrameLayout>

            <com.whatsapp.TextAndDateLayout
                android:id="@*com.whatsapp:id/text_and_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_text_row_tv"
                    android:textColor="#b3FFFFFF"
                    android:layout_gravity="left"
                    android:id="@*com.whatsapp:id/caption"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="@*com.whatsapp:dimen/conversation_video_thumb_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1.0dip" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom|center|right"
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/date_wrapper"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@*com.whatsapp:color/conversation_row_image_text"
                        android:id="@*com.whatsapp:id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ConversationDate" />
                </LinearLayout>
            </com.whatsapp.TextAndDateLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>