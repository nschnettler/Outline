<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip">
        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/name_in_group"
                android:paddingLeft="8.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="8.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                    android:textColor="#ff000000"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1"
                    android:id="@*com.whatsapp:id/name_in_group_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true" />
                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                    android:textColor="#ff000000"
                    android:id="@*com.whatsapp:id/pushname_in_group_tv"
                    android:paddingLeft="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true" />
            </LinearLayout>
            <FrameLayout
                android:id="@*com.whatsapp:id/quoted_message_holder"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" style="@*com.whatsapp:style/QuotedFrame" />
            <FrameLayout
                android:id="@*com.whatsapp:id/media_container"
                android:paddingLeft="6.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="6.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <view
                    android:id="@*com.whatsapp:id/thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop" class="com.whatsapp.ConversationRowVideo$RowVideoView" />
                <TextView
                    android:textSize="12.5sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom|center|left"
                    android:id="@*com.whatsapp:id/info"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="4.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:drawablePadding="4.0dip" />
                <FrameLayout
                    android:layout_gravity="bottom|center|left"
                    android:id="@*com.whatsapp:id/invisible_press_surface"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="15.0dip"
                    android:paddingRight="15.0dip"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="bottom|center|left"
                        android:id="@*com.whatsapp:id/control_frame"
                        android:background="@*com.whatsapp:drawable/circle_shade_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.whatsapp.CircularProgressBar
                            android:layout_gravity="left"
                            android:id="@*com.whatsapp:id/progress_bar"
                            android:visibility="gone"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:indeterminateOnly="false"
                            android:indeterminateTint="@android:color/white"
                            android:indeterminateTintMode="src_atop" />
                        <ImageView
                            android:layout_gravity="center|left"
                            android:id="@*com.whatsapp:id/cancel_btn"
                            android:visibility="gone"
                            android:layout_width="32.0dip"
                            android:layout_height="wrap_content"
                            android:src="@*com.whatsapp:drawable/ic_video_cancel" />
                        <Button
                            android:textSize="12.0dip"
                            android:textColor="@*com.whatsapp:color/conversation_row_image_text"
                            android:ellipsize="none"
                            android:layout_gravity="center"
                            android:id="@*com.whatsapp:id/control_btn"
                            android:background="@null"
                            android:paddingLeft="8.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="32.0dip"
                            android:singleLine="true"
                            android:drawableLeft="@*com.whatsapp:drawable/ic_video_download"
                            android:drawablePadding="4.0dip"
                            android:stateListAnimator="@null" />
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/play_frame"
                    android:background="@*com.whatsapp:drawable/download_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/play_button"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@*com.whatsapp:drawable/ic_video_play_conv"
                        android:contentDescription="@*com.whatsapp:string/play_video" />
                </FrameLayout>
            </FrameLayout>
            <com.whatsapp.TextAndDateLayout
                android:id="@*com.whatsapp:id/text_and_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_text_row_tv"
                    android:textColor="#ffffff"
                    android:layout_gravity="left"
                    android:id="@*com.whatsapp:id/caption"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="@*com.whatsapp:dimen/conversation_video_thumb_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1.0dip" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom|center|right"
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/date_wrapper"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#ffffff"
                        android:paddingBottom="4.0dip"
                        android:paddingRight="4.0dip"
                        android:id="@*com.whatsapp:id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" style="@*com.whatsapp:style/ConversationDate" />
                </LinearLayout>
            </com.whatsapp.TextAndDateLayout>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:id="@*com.whatsapp:id/forward" style="@*com.whatsapp:style/ForwardButton" />
</merge>