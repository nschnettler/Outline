<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip">

        <FrameLayout
            android:id="@*com.whatsapp:id/quoted_message_holder"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/QuotedFrame" />

        <LinearLayout
            android:gravity="top"
            android:layout_gravity="center|left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:minWidth="128.0dip"
                android:minHeight="@*com.whatsapp:dimen/media_message_thumb"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_gravity="left"
                    android:id="@*com.whatsapp:id/name_in_group"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="3.0dip"
                    android:paddingRight="8.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-6.0dip">

                    <com.whatsapp.TextEmojiLabel
                        android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                        android:textColor="@*android:color/white"
                        android:id="@*com.whatsapp:id/name_in_group_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true" />

                    <com.whatsapp.TextEmojiLabel
                        android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                        android:textColor="@*android:color/white"
                        android:id="@*com.whatsapp:id/pushname_in_group_tv"
                        android:paddingLeft="12.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <com.whatsapp.TextEmojiLabel
                    android:textSize="@*com.whatsapp:dimen/conversation_location_name"
                    android:textColor="@*android:color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@*com.whatsapp:id/place_name"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="4.0dip"
                    android:paddingRight="8.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:textSize="@*com.whatsapp:dimen/conversation_location_address"
                    android:textColor="@*android:color/white"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/place_address"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:lines="2" />

                <TextView
                    android:textSize="@*com.whatsapp:dimen/conversation_location_host"
                    android:textColor="@*android:color/white"
                    android:ellipsize="start"
                    android:id="@*com.whatsapp:id/host_view"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />

                <FrameLayout
                    android:id="@*com.whatsapp:id/date_wrapper"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_gravity="bottom|center|right"
                        android:id="@*com.whatsapp:id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ConversationDate" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@*com.whatsapp:id/map_frame"
                android:padding="4.0dip"
                android:layout_width="@*com.whatsapp:dimen/media_message_thumb"
                android:layout_height="@*com.whatsapp:dimen/media_message_thumb"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@*com.whatsapp:id/thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@*com.whatsapp:id/thumb_button"
                    android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <View
                    android:background="@*com.whatsapp:drawable/balloon_incoming_frame"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/progress_bar"
                    android:visibility="gone"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>
