<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@*com.whatsapp:id/status_details_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/status_details_content"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@*com.whatsapp:drawable/panel_popup_top"
            android:paddingTop="10.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@*com.whatsapp:color/accent">

            <com.whatsapp.WaTextView
                android:textSize="18.0sp"
                android:textColor="@*com.whatsapp:color/white"
                android:layout_gravity="center|left"
                android:id="@*com.whatsapp:id/title"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <com.whatsapp.WaImageView
                android:id="@*com.whatsapp:id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_action_delete"
                android:contentDescription="@*com.whatsapp:string/delete"
                style="@*com.whatsapp:style/ActionBarButtonStyle" />

            <com.whatsapp.WaImageView
                android:id="@*com.whatsapp:id/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_action_forward"
                android:contentDescription="@*com.whatsapp:string/conversation_menu_forward"
                style="@*com.whatsapp:style/ActionBarButtonStyle" />
        </LinearLayout>

        <FrameLayout
            android:id="@*com.whatsapp:id/list_container"
            android:background="@*android:color/background_material_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.4499817dip"
            android:layout_marginRight="5.649994dip">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@android:id/list"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.whatsapp.WaTextView
                android:gravity="center"
                android:id="@android:id/empty"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@*com.whatsapp:dimen/small_list_row_height"
                android:text="@*com.whatsapp:string/no_one_saw_your_status" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>