<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center"
            android:paddingTop="0.0dip"
            android:paddingBottom="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:gravity="center"
                android:paddingLeft="0.5dip"
                android:paddingTop="35.0dip"
                android:paddingRight="0.5dip"
                android:paddingBottom="24.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/photo_btn"
                    android:layout_width="@*com.whatsapp:dimen/pref_profile_photo_size"
                    android:layout_height="@*com.whatsapp:dimen/pref_profile_photo_size"
                    android:layout_marginBottom="@*com.whatsapp:dimen/btn_padding_horizontal"
                    android:src="@*com.whatsapp:drawable/ic_settings_profile"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@*com.whatsapp:string/profile_photo"
                    android:transitionName="@*com.whatsapp:string/transition_photo"
                    whatsapp:tbtnRadius="-1.0dip" />

                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/change_photo_progress"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyle" />

                <ImageButton
                    android:layout_gravity="bottom|center|right"
                    android:id="@*com.whatsapp:id/change_photo_btn"
                    android:background="@*com.whatsapp:drawable/input_circle"
                    android:layout_width="52.0dip"
                    android:layout_height="52.0dip"
                    android:layout_marginBottom="2.0dip"
                    android:src="@*com.whatsapp:drawable/ic_cam_white"
                    android:contentDescription="@*com.whatsapp:string/edit_photo_description"
                    android:elevation="2.0dip"
                    style="@*com.whatsapp:style/ActionBarButtonStyle" />
            </FrameLayout>
        </RelativeLayout>

        <View
            android:background="@*com.whatsapp:drawable/list_separator_bot"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@*android:color/background_material_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <com.whatsapp.TextEmojiLabel
                        android:textSize="19.0sp"
                        android:textColor="@*com.whatsapp:color/black"
                        android:ellipsize="end"
                        android:layout_gravity="center|left"
                        android:id="@*com.whatsapp:id/registration_name"
                        android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                        android:paddingTop="11.0dip"
                        android:paddingBottom="11.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        style="@*com.whatsapp:style/ListItemTitle" />
                </FrameLayout>

                <FrameLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="48.0dip"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleSmall" />

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/change_registration_name_btn"
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:src="@*com.whatsapp:drawable/ic_edit_teal"
                        android:contentDescription="@*com.whatsapp:string/edit_push_name"
                        style="@*com.whatsapp:style/ActionBarButtonStyle" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@*com.whatsapp:drawable/list_separator_top"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <com.whatsapp.WaTextView
            android:textSize="14.299988dip"
            android:id="@*com.whatsapp:id/push_name_explanation"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            android:paddingTop="12.0dip"
            android:paddingRight="@*com.whatsapp:dimen/info_screen_padding"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/small_list_row_height"
            android:text="@*com.whatsapp:string/settings_push_name_summary"
            android:lineSpacingMultiplier="1.0"
            style="@*com.whatsapp:style/Text.Field" />

        <View
            android:background="@*com.whatsapp:drawable/list_separator_bot"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@*android:color/background_material_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout style="@*com.whatsapp:style/FlatCardHeader">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/status_and_phone_title"
                    android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                    android:paddingRight="@*com.whatsapp:dimen/info_screen_padding"
                    android:text="@*com.whatsapp:string/profile_info_and_phone"
                    style="@*com.whatsapp:style/FlatCardTitle" />
            </FrameLayout>

            <FrameLayout
                android:id="@*com.whatsapp:id/status_card"
                android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                android:paddingRight="@*com.whatsapp:dimen/info_screen_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="60.0dip">

                <com.whatsapp.TextEmojiLabel
                    android:ellipsize="none"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:id="@*com.whatsapp:id/status"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@*com.whatsapp:style/ListItemTitle" />
            </FrameLayout>

            <View
                android:id="@*com.whatsapp:id/status_separator"
                style="@*com.whatsapp:style/FlatCardSeparator" />

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@*com.whatsapp:id/phone_card"
                android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                android:paddingRight="@*com.whatsapp:dimen/info_screen_padding"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip">

                <com.whatsapp.WaTextView
                    android:layout_gravity="center|left"
                    android:id="@*com.whatsapp:id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ListItemTitle" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:background="@*com.whatsapp:drawable/list_separator_top"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />
    </LinearLayout>
</ScrollView>