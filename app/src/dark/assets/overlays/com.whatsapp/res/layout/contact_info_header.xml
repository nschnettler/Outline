<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.whatsapp">

    <View
        android:id="@*com.whatsapp:id/header_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_header" />

    <include layout="@*com.whatsapp:layout/smb_label_scroller_stub" />

    <View
        android:id="@*com.whatsapp:id/header_top_shadow"
        android:background="@*com.whatsapp:drawable/list_separator_top"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <ViewStub
        android:id="@*com.whatsapp:id/business_details_card_stub"
        android:inflatedId="@*com.whatsapp:id/business_details_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <include layout="@*com.whatsapp:layout/live_location_card" />

    <com.whatsapp.MediaCard
        android:id="@*com.whatsapp:id/media_card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:icContentColor="@*com.whatsapp:color/white"
        app:mcTitle="@*com.whatsapp:string/view_conversation_media"
        style="@*com.whatsapp:style/InfoCard" />

    <include layout="@*com.whatsapp:layout/actions_card" />

    <com.whatsapp.InfoCard
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/status_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@*com.whatsapp:style/InfoCard">

        <LinearLayout
            android:orientation="vertical"
            android:background="@*android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout style="@*com.whatsapp:style/FlatCardHeader">

                <TextView
                    android:id="@*com.whatsapp:id/status_and_phone_title"
                    android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                    android:text="@*com.whatsapp:string/contact_info_and_phone"
                    style="@*com.whatsapp:style/FlatCardTitle" />
            </FrameLayout>

            <com.whatsapp.TextEmojiLabel
                android:ellipsize="none"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/status"
                android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                android:paddingTop="10.0dip"
                android:paddingRight="16.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                style="@*com.whatsapp:style/ListItemTitle" />

            <TextView
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/status_info"
                android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                android:paddingBottom="12.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ListItemSubtitleSmall" />

            <View
                android:id="@*com.whatsapp:id/status_separator"
                style="@*com.whatsapp:style/FlatCardSeparator" />

            <include layout="@*com.whatsapp:layout/contact_info_phone" />
        </LinearLayout>
    </com.whatsapp.InfoCard>

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/groups_card"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@*com.whatsapp:drawable/list_separator_bot"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <FrameLayout
            android:background="@*android:color/transparent"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            style="@*com.whatsapp:style/FlatCardHeader">

            <TextView
                android:ellipsize="end"
                android:paddingRight="32.0dip"
                android:text="@*com.whatsapp:string/groups_in_common"
                android:singleLine="true"
                style="@*com.whatsapp:style/FlatCardTitle" />

            <TextView
                android:id="@*com.whatsapp:id/groups_info"
                style="@*com.whatsapp:style/FlatCardInfo" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>