<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@*com.whatsapp:drawable/panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:gravity="center"
            android:id="@*com.whatsapp:id/control_btn"
            android:background="#00000000"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@*com.whatsapp:drawable/inline_audio_play"
            android:scaleType="center"
            android:contentDescription="@*com.whatsapp:string/play" />

        <ProgressBar
            android:layout_gravity="center"
            android:id="@*com.whatsapp:id/progress_bar"
            android:paddingRight="16.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxHeight="16.0dip"
            android:indeterminateOnly="false"
            android:indeterminateDrawable="@*com.whatsapp:drawable/progress_indeterminate_horizontal_holo"
            android:progressDrawable="@*com.whatsapp:drawable/download_progress"
            android:minHeight="16.0dip"
            android:layout_weight="1.0" />

        <com.whatsapp.WaTextView
            android:textColor="#ffdddddd"
            android:layout_gravity="center"
            android:id="@*com.whatsapp:id/duration"
            android:paddingRight="12.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:34"
            android:lines="1"
            android:singleLine="true" />
    </LinearLayout>
</FrameLayout>