<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:paddingLeft="@*com.whatsapp:dimen/card_h_padding"
    android:paddingRight="@*com.whatsapp:dimen/card_h_padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@*com.whatsapp:id/section_header"
            android:background="@*com.whatsapp:drawable/panel_top"
            android:layout_marginTop="@*com.whatsapp:dimen/card_v_padding"
            style="@*com.whatsapp:style/CardHeader">

            <TextView
                android:id="@*com.whatsapp:id/section_title"
                style="@*com.whatsapp:style/CardTitle" />

            <TextView
                android:id="@*com.whatsapp:id/section_icon"
                style="@*com.whatsapp:style/CardInfo" />

            <View style="@*com.whatsapp:style/CardSeparator" />
        </FrameLayout>

        <RelativeLayout
            android:id="@*com.whatsapp:id/content"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#b3ffffff"
                android:gravity="left"
                android:id="@*com.whatsapp:id/remaining"
                android:paddingLeft="12.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="12.0dip"
                android:paddingBottom="6.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ListItemSubtitle" />

            <ImageView
                android:id="@*com.whatsapp:id/contact_photo"
                android:layout_width="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_height="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_marginLeft="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:layout_marginTop="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:layout_marginRight="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:layout_marginBottom="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@*com.whatsapp:id/status"
                android:padding="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:id="@*com.whatsapp:id/timestamps"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@*com.whatsapp:id/status"
                android:layout_toRightOf="@*com.whatsapp:id/contact_photo"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <com.whatsapp.TextEmojiLabel
                            android:id="@*com.whatsapp:id/contact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@*com.whatsapp:style/ListItemTitle" />
                    </LinearLayout>

                    <com.whatsapp.TextEmojiLabel
                        android:textColor="@*com.whatsapp:color/list_item_sub_title"
                        android:id="@*com.whatsapp:id/push_name"
                        android:paddingLeft="8.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ListItemTitle" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/date_time_played_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="left"
                        android:id="@*com.whatsapp:id/date_time_played_label"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="@*com.whatsapp:string/message_played"
                        android:layout_weight="1.0"
                        style="@*com.whatsapp:style/ListItemSubtitle" />

                    <TextView
                        android:id="@*com.whatsapp:id/date_time_played"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ListItemSubtitle" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/date_time_read_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="left"
                        android:id="@*com.whatsapp:id/date_time_read_label"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="@*com.whatsapp:string/message_read"
                        android:layout_weight="1.0"
                        style="@*com.whatsapp:style/ListItemSubtitle" />

                    <TextView
                        android:id="@*com.whatsapp:id/date_time_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ListItemSubtitle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@*com.whatsapp:id/date_time_delivered_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="left"
                        android:id="@*com.whatsapp:id/date_time_delivered_label"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="@*com.whatsapp:string/message_delivered"
                        android:layout_weight="1.0"
                        style="@*com.whatsapp:style/ListItemSubtitle" />

                    <TextView
                        android:id="@*com.whatsapp:id/date_time_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@*com.whatsapp:style/ListItemSubtitle" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@*com.whatsapp:id/divider"
                android:background="@*com.whatsapp:color/divider_gray"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="72.0dip"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>