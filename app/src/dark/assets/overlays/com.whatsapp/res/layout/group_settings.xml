<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@*com.whatsapp:color/gray_activity"
    android:paddingTop="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="@*com.whatsapp:drawable/list_separator_bot"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:id="@*com.whatsapp:id/restricted_mode_layout"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            android:paddingTop="10.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@*com.whatsapp:dimen/info_screen_row">

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/restricted_mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/group_settings_restricted_mode_title"
                style="@*com.whatsapp:style/ListItemTitle" />

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/list_item_info"
                android:gravity="left"
                android:id="@*com.whatsapp:id/restricted_mode_info"
                android:paddingRight="24.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@*com.whatsapp:id/restricted_mode_separator"
            style="@*com.whatsapp:style/FlatCardSeparator" />

        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:id="@*com.whatsapp:id/announcement_group_layout"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            android:paddingTop="10.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@*com.whatsapp:dimen/info_screen_row">

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/announcement_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/group_settings_announcement_title"
                style="@*com.whatsapp:style/ListItemTitle" />

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/list_item_info"
                android:gravity="left"
                android:id="@*com.whatsapp:id/announcement_group_info"
                android:paddingRight="24.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@*com.whatsapp:id/frequently_forwarded_divider_top"
        android:background="@*com.whatsapp:drawable/list_separator_top"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <View
        android:id="@*com.whatsapp:id/frequently_forwarded_divider_bottom"
        android:background="@*com.whatsapp:drawable/list_separator_bot"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:id="@*com.whatsapp:id/frequently_forwarded_layout"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            android:paddingTop="10.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@*com.whatsapp:dimen/info_screen_row">

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/frequently_forwarded_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/group_settings_frequently_forwarded_title"
                style="@*com.whatsapp:style/ListItemTitle" />

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/list_item_info"
                android:gravity="left"
                android:id="@*com.whatsapp:id/frequently_forwarded_info"
                android:paddingRight="24.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@*com.whatsapp:drawable/list_separator_top"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/manage_admins_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@*com.whatsapp:drawable/list_separator_bot"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_row">

            <com.whatsapp.WaTextView
                android:gravity="center_vertical"
                android:id="@*com.whatsapp:id/manage_admins"
                android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
                android:paddingRight="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@*com.whatsapp:string/edit_group_admins"
                style="@*com.whatsapp:style/ListItemTitle" />
        </FrameLayout>

        <View
            android:background="@*com.whatsapp:drawable/list_separator_top"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />
    </LinearLayout>
</LinearLayout>