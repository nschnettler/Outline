<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@*com.whatsapp:drawable/date_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip">

        <com.whatsapp.WaImageView
            android:id="@*com.whatsapp:id/photo_old"
            android:padding="4.0dip"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip" />

        <com.whatsapp.WaImageView
            android:id="@*com.whatsapp:id/arrow"
            android:padding="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.whatsapp.WaImageView
            android:id="@*com.whatsapp:id/photo_new"
            android:padding="4.0dip"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip" />

        <com.whatsapp.WaTextView
            android:textSize="@*com.whatsapp:dimen/conversation_divider_row_tv"
            android:textColor="#ffdddddd"
            android:gravity="left"
            android:id="@*com.whatsapp:id/info"
            android:paddingLeft="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</merge>