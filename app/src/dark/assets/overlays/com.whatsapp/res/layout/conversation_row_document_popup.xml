<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@*com.whatsapp:drawable/document_info_background"
    android:padding="8.0dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@*com.whatsapp:id/icon"
        android:paddingRight="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.whatsapp.TextEmojiLabel
            android:textSize="15.0sp"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:id="@*com.whatsapp:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@*com.whatsapp:id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />

            <TextView
                android:id="@*com.whatsapp:id/bullet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfoBullet" />

            <TextView
                android:id="@*com.whatsapp:id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />

            <TextView
                android:id="@*com.whatsapp:id/bullet_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfoBullet" />

            <TextView
                android:id="@*com.whatsapp:id/file_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>