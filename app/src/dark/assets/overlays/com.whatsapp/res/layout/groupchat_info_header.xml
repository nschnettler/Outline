<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.whatsapp">

    <View
        android:id="@*com.whatsapp:id/header_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_header" />

    <include layout="@*com.whatsapp:layout/smb_label_scroller_stub" />

    <View
        android:id="@*com.whatsapp:id/header_top_shadow"
        android:background="@*com.whatsapp:drawable/list_separator_top"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

    <include layout="@*com.whatsapp:layout/description_card" />

    <TextView
        android:textSize="16.0sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@*com.whatsapp:id/no_participant"
        android:paddingLeft="@*com.whatsapp:dimen/card_h_padding"
        android:paddingTop="@*com.whatsapp:dimen/card_v_padding"
        android:paddingRight="@*com.whatsapp:dimen/card_h_padding"
        android:paddingBottom="8.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@*com.whatsapp:string/not_a_group_participant" />

    <include layout="@*com.whatsapp:layout/live_location_card" />

    <com.whatsapp.MediaCard
        android:id="@*com.whatsapp:id/media_card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:icContentColor="@*com.whatsapp:color/white"
        app:mcTitle="@*com.whatsapp:string/view_conversation_media"
        style="@*com.whatsapp:style/InfoCard" />

    <include layout="@*com.whatsapp:layout/actions_card" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/participants_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@*com.whatsapp:drawable/list_separator_bot"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@*android:color/background_material_dark"
            android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
            android:paddingTop="0.0dip"
            style="@*com.whatsapp:style/FlatCardHeader">

            <TextView
                android:id="@*com.whatsapp:id/participants_title"
                android:paddingTop="12.0dip"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                style="@*com.whatsapp:style/FlatCardTitle" />

            <TextView
                android:id="@*com.whatsapp:id/participants_info"
                android:paddingTop="12.0dip"
                style="@*com.whatsapp:style/FlatCardInfo" />

            <ImageView
                android:id="@*com.whatsapp:id/participants_search"
                android:background="?android:actionBarItemBackground"
                android:paddingRight="12.0dip"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="-12.0dip"
                android:src="@*com.whatsapp:drawable/ic_action_search"
                android:tint="@*com.whatsapp:color/accent"
                android:contentDescription="@*com.whatsapp:string/search_group_participants" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/add_participant_layout"
        android:background="@*android:color/background_material_dark"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@*com.whatsapp:id/add_participant_button"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/small_list_row_height">

            <ImageView
                android:id="@*com.whatsapp:id/add_participant_icon"
                android:background="@*com.whatsapp:drawable/green_circle"
                android:layout_width="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_height="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_marginLeft="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:layout_marginRight="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:src="@*com.whatsapp:drawable/ic_action_add_person"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@*com.whatsapp:id/add_participant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/add_paticipants"
                android:layout_toRightOf="@*com.whatsapp:id/add_participant_icon"
                android:layout_centerVertical="true"
                style="@*com.whatsapp:style/ListItemTitle" />
        </RelativeLayout>

        <View
            android:background="@*com.whatsapp:color/divider_gray"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@*com.whatsapp:dimen/info_screen_padding" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@*com.whatsapp:id/invite_via_link_button"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/small_list_row_height">

            <ImageView
                android:id="@*com.whatsapp:id/invite_via_link_icon"
                android:background="@*com.whatsapp:drawable/green_circle"
                android:layout_width="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_height="@*com.whatsapp:dimen/small_list_avatar_size"
                android:layout_marginLeft="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:layout_marginRight="@*com.whatsapp:dimen/small_list_avatar_padding"
                android:src="@*com.whatsapp:drawable/ic_group_invite_link"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/invite_via_link"
                android:layout_toRightOf="@*com.whatsapp:id/invite_via_link_icon"
                android:layout_centerVertical="true"
                style="@*com.whatsapp:style/ListItemTitle" />
        </RelativeLayout>

        <View
            android:id="@*com.whatsapp:id/invite_via_link_separator"
            android:background="@*com.whatsapp:color/divider_gray"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@*com.whatsapp:dimen/info_screen_padding" />
    </LinearLayout>
</LinearLayout>