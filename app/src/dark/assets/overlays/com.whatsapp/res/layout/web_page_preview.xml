<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@*com.whatsapp:id/link_preview_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@*com.whatsapp:drawable/balloon_incoming_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@*com.whatsapp:id/link_preview_content"
        android:background="@*com.whatsapp:drawable/link_preview_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minWidth="280.0dip">

        <FrameLayout
            android:id="@*com.whatsapp:id/thumb_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.whatsapp.ThumbnailButton
                android:id="@*com.whatsapp:id/thumb"
                android:layout_width="@*com.whatsapp:dimen/link_preview_thumb_width"
                android:layout_height="@*com.whatsapp:dimen/link_preview_thumb_height"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_gravity="center"
                android:id="@*com.whatsapp:id/play_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_video_play"
                android:contentDescription="@*com.whatsapp:string/play_video" />

            <com.whatsapp.CircularProgressBar
                android:layout_gravity="center"
                android:id="@*com.whatsapp:id/progress"
                android:padding="16.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:indeterminateOnly="true"
                whatsapp:cpbBackground="#00000000"
                whatsapp:cpbColor="#99ffffff"
                whatsapp:cpbFill="#00000000"
                whatsapp:cpbOutlineColor="#20000000"
                whatsapp:cpbOutlineWidth="1.0dip"
                whatsapp:cpbStrokeWidthFactor="10.0" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="14.0dip"
                android:textColor="#FFFFFF"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:lineSpacingMultiplier="1.08" />

            <LinearLayout
                android:gravity="left"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#b3FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/url"
                    android:paddingBottom="1.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:includeFontPadding="false" />

                <TextView
                    android:textColor="#FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/gif_size_bullet"
                    android:paddingLeft="4.0sp"
                    android:paddingRight="4.0sp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@*com.whatsapp:string/contacts_help_bullet"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:textColor="#b3FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/gif_size"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center|right|top"
        android:id="@*com.whatsapp:id/cancel"
        android:paddingLeft="12.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="2.0dip"
        android:paddingBottom="12.0dip"
        android:visibility="gone"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:src="@*com.whatsapp:drawable/ic_close"
        android:contentDescription="@*com.whatsapp:string/cancel" />
</FrameLayout>