<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@*com.whatsapp:id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="24.0dip"
            android:paddingTop="24.0dip"
            android:paddingRight="24.0dip"
            android:paddingBottom="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.WaTextView
                android:textSize="@*com.whatsapp:dimen/settings_title_text_size"
                android:textColor="@*com.whatsapp:color/settings_item_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.0dip"
                android:text="@*com.whatsapp:string/change_number_old_number" />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/registration_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24.0dip">

                <com.whatsapp.WaTextView
                    android:textSize="16.0sp"
                    android:textColor="#850b1820"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <com.whatsapp.WaEditText
                    android:textSize="16.0sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:id="@*com.whatsapp:id/registration_cc"
                    android:layout_width="@*com.whatsapp:dimen/enter_phone_number_cc_width"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:digits="\ 0123456789"
                    android:inputType="phone" />

                <com.whatsapp.WaEditText
                    android:textSize="16.0sp"
                    android:textColor="#FFF"
                    android:textColorHint="#b3FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/registration_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:hint="@*com.whatsapp:string/change_number_your_old_phone_number_capped"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:layout_weight="1.0"
                    android:inputType="phone"
                    android:imeOptions="actionDone" />
            </LinearLayout>

            <com.whatsapp.WaTextView
                android:textSize="@*com.whatsapp:dimen/settings_title_text_size"
                android:textColor="@*com.whatsapp:color/settings_item_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.0dip"
                android:text="@*com.whatsapp:string/change_number_new_number" />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/registration_new_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip">

                <com.whatsapp.WaTextView
                    android:textSize="16.0sp"
                    android:textColor="#850b1820"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <com.whatsapp.WaEditText
                    android:textSize="16.0sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:id="@*com.whatsapp:id/registration_new_cc"
                    android:layout_width="@*com.whatsapp:dimen/enter_phone_number_cc_width"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:digits="\ 0123456789"
                    android:inputType="phone" />

                <com.whatsapp.WaEditText
                    android:textSize="16.0sp"
                    android:textColor="#FFF"
                    android:textColorHint="#b3FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/registration_new_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:hint="@*com.whatsapp:string/change_number_your_new_phone_number_capped"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:layout_weight="1.0"
                    android:inputType="phone"
                    android:imeOptions="actionDone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@*com.whatsapp:id/bottom_button_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaButton
            android:layout_gravity="center_horizontal"
            android:id="@*com.whatsapp:id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="@*com.whatsapp:string/next"
            style="@*com.whatsapp:style/WhatsAppButton.Green" />
    </FrameLayout>
</LinearLayout>