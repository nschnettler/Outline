<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@*com.whatsapp:dimen/conversation_share_contact_width"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@*com.whatsapp:id/name_in_group"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="8.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#ffffffff"
                android:id="@*com.whatsapp:id/name_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#ffdddddd"
                android:id="@*com.whatsapp:id/pushname_in_group_tv"
                android:paddingLeft="12.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />
        </LinearLayout>

        <FrameLayout
            android:id="@*com.whatsapp:id/quoted_message_holder"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/QuotedFrame" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@*com.whatsapp:id/contact_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.ThumbnailButton
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:id="@*com.whatsapp:id/picture"
                android:layout_width="@*com.whatsapp:dimen/single_contact_message_photo_size"
                android:layout_height="@*com.whatsapp:dimen/single_contact_message_photo_size"
                android:layout_margin="8.0dip"
                android:scaleType="fitCenter"
                whatsapp:tbtnForegroundOnly="false"
                whatsapp:tbtnRadius="-1.0dip" />

            <com.whatsapp.TextEmojiLabel
                android:textColor="@*com.whatsapp:drawable/flat_button_link_color_incoming"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center|left"
                android:id="@*com.whatsapp:id/vcard_text"
                android:paddingRight="8.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1.0"
                style="@*com.whatsapp:style/ConversationSharedContact" />

            <LinearLayout
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingRight="6.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip">

                <TextView
                    android:id="@*com.whatsapp:id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@*com.whatsapp:id/button_div"
            android:background="@*com.whatsapp:color/divider_gray"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textColor="@*com.whatsapp:drawable/flat_button_link_color_incoming"
                android:id="@*com.whatsapp:id/msg_contact_btn"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/send_message_to_contact_button"
                android:layout_weight="1.0"
                style="@*com.whatsapp:style/ConversationSharedContactButton" />

            <View
                android:id="@*com.whatsapp:id/button_vert_div"
                android:background="@*com.whatsapp:color/divider_gray"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <com.whatsapp.TextEmojiLabel
                android:textColor="@*com.whatsapp:drawable/flat_button_link_color_incoming"
                android:id="@*com.whatsapp:id/add_contact_btn"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/add_contact_button"
                android:layout_weight="1.0"
                style="@*com.whatsapp:style/ConversationSharedContactButton" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@*com.whatsapp:id/forward"
        android:contentDescription="@*com.whatsapp:string/forward_to"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>