<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:background="@*com.whatsapp:color/gray_activity"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@*com.whatsapp:color/divider_gray"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />

            <include
                android:id="@*com.whatsapp:id/text_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/contacts_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/locations_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <LinearLayout
                android:orientation="vertical"
                android:background="@*com.whatsapp:color/gray_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@*com.whatsapp:drawable/list_separator_top"
                    android:layout_width="fill_parent"
                    android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />

                <View
                    android:background="@*com.whatsapp:drawable/list_separator_bot"
                    android:layout_width="fill_parent"
                    android:layout_height="@*com.whatsapp:dimen/info_screen_card_spacing" />
            </LinearLayout>

            <include
                android:id="@*com.whatsapp:id/image_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/gif_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/video_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/audio_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <include
                android:id="@*com.whatsapp:id/documents_row"
                layout="@*com.whatsapp:layout/storage_usage_detail_row" />

            <FrameLayout
                android:background="@*com.whatsapp:color/gray_activity"
                android:layout_width="fill_parent"
                android:layout_height="13.0dip">

                <View
                    android:background="@*com.whatsapp:drawable/list_separator_top"
                    android:layout_width="fill_parent"
                    android:layout_height="13.0dip" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:background="@*com.whatsapp:color/divider_gray"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@*com.whatsapp:id/storage_usage_detail_manage"
        android:paddingLeft="17.0dip"
        android:paddingTop="15.0dip"
        android:paddingRight="17.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_gravity="center|right"
            android:id="@*com.whatsapp:id/storage_usage_detail_progress_bar"
            android:visibility="gone"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:indeterminate="true"
            style="?android:progressBarStyleLarge" />

        <TextView
            android:textSize="14.0sp"
            android:textColor="@*com.whatsapp:color/accent"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@*com.whatsapp:id/storage_usage_detail_manage_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/storage_usage_detail_manage_messages"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <FrameLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/storage_usage_detail_clear"
        android:paddingLeft="17.0dip"
        android:paddingTop="15.0dip"
        android:paddingRight="17.0dip"
        android:paddingBottom="15.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14.0sp"
            android:textColor="@*com.whatsapp:color/red_button_text"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@*com.whatsapp:id/storage_usage_detail_clear_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </FrameLayout>
</LinearLayout>