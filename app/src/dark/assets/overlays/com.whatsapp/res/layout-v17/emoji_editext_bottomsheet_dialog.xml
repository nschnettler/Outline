<?xml version="1.0" encoding="utf-8"?>
<com.whatsapp.EmojiPopupLayout android:id="@*com.whatsapp:id/emoji_edit_text_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.whatsapp">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaTextView
            android:textSize="16.0sp"
            android:textColor="@*com.whatsapp:color/settings_item_title_text"
            android:id="@*com.whatsapp:id/dialog_title_tv"
            android:paddingLeft="26.0dip"
            android:paddingRight="24.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14.0dip"
            app:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:paddingLeft="24.0dip"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip">

            <ViewStub
                android:id="@*com.whatsapp:id/stub_button_before_text"
                android:inflatedId="@*com.whatsapp:id/stub_button_before_text"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_marginRight="10.0dip" />

            <RelativeLayout
                android:id="@*com.whatsapp:id/text_and_counter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@*com.whatsapp:id/emoji_btn"
                android:layout_toRightOf="@*com.whatsapp:id/stub_button_before_text"
                android:layout_centerVertical="true">

                <com.whatsapp.WaEditText
                    android:textSize="16.0sp"
                    android:textColor="#FFF"
                    android:textColorHint="#b3FFFFFF"
                    android:ellipsize="end"
                    android:id="@*com.whatsapp:id/edit_text"
                    android:paddingRight="@*com.whatsapp:dimen/counter_text_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:paddingEnd="@*com.whatsapp:dimen/counter_text_padding" />

                <com.whatsapp.WaTextView
                    android:textSize="14.0sp"
                    android:textColor="@*com.whatsapp:color/edit_text_counter"
                    android:gravity="center|right"
                    android:id="@*com.whatsapp:id/counter_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:minHeight="48.0dip"
                    android:layout_alignBottom="@*com.whatsapp:id/edit_text"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <com.whatsapp.WaImageButton
                android:id="@*com.whatsapp:id/emoji_btn"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@*com.whatsapp:drawable/input_emoji"
                android:layout_alignBottom="@*com.whatsapp:id/text_and_counter"
                android:layout_alignParentRight="true"
                android:contentDescription="@*com.whatsapp:string/emoji_button_description"
                style="@*com.whatsapp:style/ActionBarButtonStyle" />
        </RelativeLayout>

        <LinearLayout
            android:gravity="center|right"
            android:orientation="horizontal"
            android:paddingBottom="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="?android:buttonBarStyle">

            <com.whatsapp.WaButton
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/settings_title_accent"
                android:id="@*com.whatsapp:id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/cancel"
                style="?android:borderlessButtonStyle" />

            <com.whatsapp.WaButton
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/settings_title_accent"
                android:id="@*com.whatsapp:id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/save"
                style="?android:borderlessButtonStyle" />
        </LinearLayout>

        <com.whatsapp.emoji.search.EmojiSearchContainer
            android:id="@*com.whatsapp:id/emoji_search_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.whatsapp.EmojiPopupLayout>