<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/conversation_row_root"
        android:layout_width="@*com.whatsapp:dimen/conversation_row_document_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip">

        <LinearLayout
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:id="@*com.whatsapp:id/name_in_group"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="8.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#ffffffff"
                android:id="@*com.whatsapp:id/name_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#b3FFFFFF"
                android:id="@*com.whatsapp:id/pushname_in_group_tv"
                android:paddingLeft="12.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />
        </LinearLayout>

        <FrameLayout
            android:id="@*com.whatsapp:id/quoted_message_holder"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/QuotedFrame" />

        <RelativeLayout
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="62.0dip">

            <FrameLayout
                android:layout_gravity="center"
                android:id="@*com.whatsapp:id/picture_frame"
                android:padding="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <com.whatsapp.WaImageView
                    android:id="@*com.whatsapp:id/picture"
                    android:layout_width="54.0dip"
                    android:layout_height="54.0dip"
                    android:src="@*com.whatsapp:drawable/audio_message_thumb"
                    android:scaleType="fitCenter" />

                <com.whatsapp.WaImageView
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/picture_in_group"
                    android:layout_width="54.0dip"
                    android:layout_height="54.0dip"
                    android:src="@*com.whatsapp:drawable/audio_message_thumb"
                    android:scaleType="fitCenter" />

                <com.whatsapp.WaImageView
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/icon"
                    android:paddingBottom="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@*com.whatsapp:drawable/ic_audio"
                    android:scaleType="center" />

                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/visualizer_frame"
                    android:paddingBottom="8.0dip"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip" />

                <com.whatsapp.WaTextView
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_gravity="bottom|center"
                    android:id="@*com.whatsapp:id/duration"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="6.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    style="@*com.whatsapp:style/ConversationDate" />
            </FrameLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/controls"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_toLeftOf="@*com.whatsapp:id/picture_frame"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <FrameLayout
                    android:gravity="center"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip">

                    <com.whatsapp.WaImageButton
                        android:gravity="center"
                        android:id="@*com.whatsapp:id/control_btn"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@*com.whatsapp:drawable/inline_audio_play"
                        android:scaleType="center"
                        android:contentDescription="@*com.whatsapp:string/play" />

                    <com.whatsapp.CircularProgressBar
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/progress_bar_1"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:indeterminateOnly="false" />
                </FrameLayout>

                <com.whatsapp.VoiceNoteSeekBar
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/audio_seekbar"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    whatsapp:vnsbThumbSize="12.0dip"
                    whatsapp:vnsbTrackWidth="3.0dip"
                    style="@*com.whatsapp:style/VoiceNoteSeekBar" />
            </LinearLayout>

            <com.whatsapp.WaTextView
                android:textColor="?android:textColorSecondary"
                android:ellipsize="end"
                android:id="@*com.whatsapp:id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:maxLines="1"
                android:layout_toLeftOf="@*com.whatsapp:id/date_wrapper"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                style="@*com.whatsapp:style/ConversationDate" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingRight="0.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginBottom="3.0dip"
                android:layout_toLeftOf="@*com.whatsapp:id/picture_frame"
                android:layout_alignParentBottom="true">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.whatsapp.WaImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>