<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/content"
        android:layout_width="@*com.whatsapp:dimen/conversation_row_document_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@*com.whatsapp:dimen/conversation_row_margin_large">

        <LinearLayout
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:id="@*com.whatsapp:id/name_in_group"
            android:paddingLeft="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
            android:paddingTop="3.0dip"
            android:paddingRight="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#ffffffff"
                android:id="@*com.whatsapp:id/name_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_participant_name_tv"
                android:textColor="#b3FFFFFF"
                android:id="@*com.whatsapp:id/pushname_in_group_tv"
                android:paddingLeft="12.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />
        </LinearLayout>

        <FrameLayout
            android:id="@*com.whatsapp:id/quoted_message_holder"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/QuotedFrame" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:foreground="@*com.whatsapp:drawable/balloon_incoming_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <view
                    android:id="@*com.whatsapp:id/preview"
                    android:layout_width="fill_parent"
                    android:layout_height="@*com.whatsapp:dimen/conversation_row_document_preview_height"
                    android:scaleType="centerCrop"
                    class="com.whatsapp.conversationrow.ConversationRowDocument$DocumentPreviewView" />

                <View
                    android:id="@*com.whatsapp:id/preview_separator"
                    android:background="@*com.whatsapp:color/conversation_row_preview_separator_color"
                    android:layout_width="fill_parent"
                    android:layout_height="0.30000007dip" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@*com.whatsapp:color/share_preview_container_background"
                    android:paddingLeft="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                    android:paddingRight="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.whatsapp.WaImageView
                        android:id="@*com.whatsapp:id/icon"
                        android:paddingTop="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                        android:paddingBottom="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter" />

                    <com.whatsapp.TextEmojiLabel
                        android:textSize="15.0sp"
                        android:textColor="#ffffffff"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@*com.whatsapp:id/title"
                        android:padding="8.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1.0" />

                    <FrameLayout
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@*com.whatsapp:id/control_btn_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.whatsapp.WaImageButton
                            android:layout_gravity="center"
                            android:id="@*com.whatsapp:id/control_btn"
                            android:background="#00000000"
                            android:padding="8.0dip"
                            android:layout_width="42.0dip"
                            android:layout_height="42.0dip"
                            android:scaleType="fitCenter"
                            android:alpha="0.7" />

                        <com.whatsapp.CircularProgressBar
                            android:layout_gravity="center"
                            android:id="@*com.whatsapp:id/progressbar"
                            android:visibility="gone"
                            android:layout_width="42.0dip"
                            android:layout_height="42.0dip"
                            android:indeterminateOnly="false" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="8.0dip"
            android:paddingBottom="3.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/bullet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfoBullet" />

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/bullet_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfoBullet" />

            <com.whatsapp.WaTextView
                android:id="@*com.whatsapp:id/file_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationDocumentInfo" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <LinearLayout
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingRight="6.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.whatsapp.WaImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>