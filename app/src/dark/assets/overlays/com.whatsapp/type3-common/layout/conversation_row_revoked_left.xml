<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center|left"
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip"
        android:minHeight="30.0dip">

        <LinearLayout
            android:id="@*com.whatsapp:id/name_in_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/ConversationRowGroupNameContainer">

            <com.whatsapp.TextEmojiLabel
                android:id="@*com.whatsapp:id/name_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationRowParticipantName.TextRow" />

            <com.whatsapp.TextEmojiLabel
                android:id="@*com.whatsapp:id/pushname_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationRowPushName.TextRow" />
        </LinearLayout>

        <com.whatsapp.TextAndDateLayout
            android:layout_gravity="left"
            android:paddingRight="2.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_text_row_tv"
                android:textStyle="italic"
                android:textColor="#ffdddddd"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/message_text"
                android:paddingLeft="8.0dip"
                android:paddingTop="2.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2.0dip" />

            <LinearLayout
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/date"
                    android:paddingBottom="1.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />
            </LinearLayout>
        </com.whatsapp.TextAndDateLayout>
    </LinearLayout>
</merge>