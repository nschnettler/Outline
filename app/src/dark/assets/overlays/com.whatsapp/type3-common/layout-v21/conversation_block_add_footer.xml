<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@*com.whatsapp:id/content"
    android:background="#0dFFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16.0dip"
    android:layout_marginBottom="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="#0dFFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

    <com.whatsapp.WaTextView
        android:id="@*com.whatsapp:id/header"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@*com.whatsapp:string/sender_not_a_contact" />

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/spam_btn"
        android:background="@*com.whatsapp:drawable/selector_orange_gradient"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.whatsapp:drawable/ic_spam_report"
            android:tint="@*com.whatsapp:color/accent_light" />

        <com.whatsapp.WaTextView
            android:textSize="15.0sp"
            android:textColor="@*com.whatsapp:color/accent_light"
            android:id="@*com.whatsapp:id/spam_btn_text"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/report_spam"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/exit_group_btn"
        android:background="@*com.whatsapp:drawable/selector_orange_gradient"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.whatsapp:drawable/ic_exit_group"
            android:tint="@*com.whatsapp:color/accent_light" />

        <com.whatsapp.WaTextView
            android:textSize="15.0sp"
            android:textColor="@*com.whatsapp:color/accent_light"
            android:id="@*com.whatsapp:id/exit_group_btn_text"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/exit_group"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/not_spam_btn"
        android:background="@*com.whatsapp:drawable/selector_orange_gradient"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.whatsapp:drawable/ic_spam_ok"
            android:tint="@*com.whatsapp:color/accent_light" />

        <com.whatsapp.WaTextView
            android:textSize="15.0sp"
            android:textColor="@*com.whatsapp:color/accent_light"
            android:id="@*com.whatsapp:id/not_spam_btn_text"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/not_spam"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/block_btn"
        android:background="@*com.whatsapp:drawable/selector_orange_gradient"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.whatsapp:drawable/ic_spam_block"
            android:tint="@*com.whatsapp:color/accent_light"
            android:tintMode="src_in" />

        <com.whatsapp.WaTextView
            android:textSize="15.0sp"
            android:textColor="@*com.whatsapp:color/accent_light"
            android:id="@*com.whatsapp:id/block_btn_text"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/block"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@*com.whatsapp:id/add_btn"
        android:background="@*com.whatsapp:drawable/selector_orange_gradient"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.whatsapp.WaImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.whatsapp:drawable/ic_spam_add"
            android:tint="@*com.whatsapp:color/accent_light" />

        <com.whatsapp.WaTextView
            android:textSize="15.0sp"
            android:textColor="@*com.whatsapp:color/accent_light"
            android:id="@*com.whatsapp:id/add_btn_text"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/add_contact"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4.0dip" />

    <com.whatsapp.TextEmojiLabel
        android:id="@*com.whatsapp:id/group_privacy_info"
        android:paddingLeft="20.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="12.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#0dFFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />
</LinearLayout>