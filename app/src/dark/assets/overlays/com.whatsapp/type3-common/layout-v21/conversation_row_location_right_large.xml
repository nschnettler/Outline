<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/content"
        android:layout_width="@*com.whatsapp:dimen/conversation_row_document_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@*com.whatsapp:dimen/conversation_row_margin_large">

        <include layout="@*com.whatsapp:layout/conversation_row_quoted_frame" />

        <FrameLayout
            android:id="@*com.whatsapp:id/map_frame"
            android:padding="@*com.whatsapp:dimen/conversation_video_thumb_padding"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/conversation_row_location_map_height">

            <com.whatsapp.WaImageView
                android:id="@*com.whatsapp:id/thumb"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />

            <com.whatsapp.location.WaMapView
                android:id="@*com.whatsapp:id/map_holder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <com.whatsapp.WaButton
                android:id="@*com.whatsapp:id/thumb_button"
                android:background="@*com.whatsapp:drawable/selector_orange_gradient"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@*com.whatsapp:string/location_button" />

            <View
                android:background="@*com.whatsapp:drawable/balloon_outgoing_frame"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <FrameLayout
                android:layout_gravity="center"
                android:id="@*com.whatsapp:id/control_frame"
                android:background="@*com.whatsapp:drawable/download_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.whatsapp.WaButton
                    android:textColor="@*com.whatsapp:color/conversation_row_image_text"
                    android:ellipsize="none"
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/control_btn"
                    android:background="@null"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawableLeft="@*com.whatsapp:drawable/btn_upload"
                    android:drawablePadding="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                    android:stateListAnimator="@null" />

                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@*com.whatsapp:id/progress_bar"
                    android:visibility="gone"
                    android:layout_width="48.0dip"
                    android:layout_height="48.0dip" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@*com.whatsapp:id/message_info_holder"
            android:paddingTop="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.TextEmojiLabel
                android:textSize="@*com.whatsapp:dimen/conversation_location_name"
                android:textColor="#ffffffff"
                android:ellipsize="end"
                android:id="@*com.whatsapp:id/place_name"
                android:paddingLeft="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:paddingRight="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true" />

            <com.whatsapp.WaTextView
                android:textSize="@*com.whatsapp:dimen/conversation_location_address"
                android:textColor="#b3FFFFFF"
                android:ellipsize="end"
                android:gravity="left"
                android:id="@*com.whatsapp:id/place_address"
                android:paddingLeft="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:paddingRight="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2" />

            <com.whatsapp.WaTextView
                android:textSize="@*com.whatsapp:dimen/conversation_location_host"
                android:textColor="#b3FFFFFF"
                android:ellipsize="start"
                android:id="@*com.whatsapp:id/host_view"
                android:paddingLeft="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:paddingRight="@*com.whatsapp:dimen/conversation_row_inner_item_padding"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingRight="7.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />

                <com.whatsapp.WaImageView
                    android:id="@*com.whatsapp:id/status"
                    android:paddingLeft="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.whatsapp.WaImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>