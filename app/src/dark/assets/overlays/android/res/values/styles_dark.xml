<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- USB Dialog -->
    <style name="Theme.Material.Light.Dialog.NoActionBar" parent="@*android:style/Theme.Material.Dialog.NoActionBar">
        <item name="@*android:windowActionBar">false</item>
        <item name="@*android:windowNoTitle">true</item>
    </style>
    <!-- Power Menu: Rebooting -->
    <style name="Theme.DeviceDefault.System" parent="@*android:style/Theme.DeviceDefault.Settings">
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>
    </style>
    <!-- Theme for the dialog shown when an app crashes or ANRs. -->
    <style name="Theme.Dialog.AppError" parent="@*android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowActivityTransitions">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>



    <!-- Settings -->
        <style name="Theme.DeviceDefault.Settings" parent="@*android:style/Theme.Material.Settings">
            <item name="*android:colorAccent">@*android:color/accent_device_default_light</item>
            <item name="*android:colorEdgeEffect">@*android:color/black</item>
        </style>

        <style name="Theme.Material.Settings" parent="@*android:style/Theme.Material">
            <item name="*android:colorPrimary">@*android:color/primary_device_default_settings</item>
            <item name="*android:colorPrimaryDark">@*android:color/primary_dark_device_default_settings</item>
            <item name="*android:colorSecondary">@*android:color/secondary_device_default_settings</item>

            <item name="*android:presentationTheme">@*android:style/Theme.Material.Settings.Dialog.Presentation</item>
            <item name="*android:panelMenuListTheme">@*android:style/Theme.Material.Settings.CompactMenu</item>
            <item name="*android:searchDialogTheme">@*android:style/Theme.Material.Settings.SearchBar</item>
            <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
            <item name="*android:colorForegroundInverse">#FFFFFF</item>                                 <!-- Spinner Selected Text -->
            <item name="*android:textColorPrimaryInverse">#FFFFFF</item>                                <!-- Button Text -->
        </style>

        <style name="Theme.Material.Settings.BaseDialog" parent="@*android:style/Theme.Material.BaseDialog">
            <item name="@*android:colorPrimary">@*android:color/primary_material_settings</item>
            <item name="@*android:colorPrimaryDark">@*android:color/primary_dark_material_settings</item>
            <item name="@*android:colorSecondary">@*android:color/secondary_material_settings</item>
        </style>

        <style name="Theme.Material.Settings.Dialog.BaseAlert" parent="@*android:style/Theme.Material.Dialog.BaseAlert">
            <item name="@*android:colorPrimary">@*android:color/primary_material_settings</item>
            <item name="@*android:colorPrimaryDark">@*android:color/primary_dark_material_settings</item>
            <item name="@*android:colorSecondary">@*android:color/secondary_material_settings</item>
        </style>


    <!-- Resolver -->
    <style name="Theme.DeviceDefault.Resolver" parent="@*android:style/Theme.Material">
        <item name="android:backgroundTint">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/transparent</item>

        <item name="android:windowEnterTransition">@empty</item>
        <item name="android:windowExitTransition">@empty</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#b3FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>

        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">@*android:color/background_floating_material_dark</item>
    </style>

    <!-- QuickSettings controlled in SystemUI Overlay, but needed for Brightness Dialog and SIM unlocked Dialog -->
    <style name="Theme.DeviceDefault.QuickSettings" parent="@*android:Theme.DeviceDefault"/>
</resources>
