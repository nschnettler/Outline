<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@*com.google.android.contacts:id/contact_editor_fragment"
    android:background="@*android:color/background_material_dark"
    android:fadingEdge="none"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.apps.contacts.editor.RawContactEditorView
        android:orientation="vertical"
        android:id="@*com.google.android.contacts:id/raw_contacts_editor_view"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@*com.google.android.contacts:id/header_container"
            android:background="@*com.google.android.contacts:color/quickcontact_header_background"
            android:paddingTop="@*com.google.android.contacts:dimen/editor_avatar_margin_top"
            android:paddingBottom="@*com.google.android.contacts:dimen/editor_avatar_margin_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <include layout="@*com.google.android.contacts:layout/photo_editor_view" />
        </LinearLayout>

        <View
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip" />

        <include layout="@*com.google.android.contacts:layout/account_header_presenter" />

        <include layout="@*com.google.android.contacts:layout/contact_editor_fields" />
    </com.google.android.apps.contacts.editor.RawContactEditorView>
</ScrollView>