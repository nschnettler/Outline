<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:paddingBottom="@*com.google.android.apps.photos:dimen/toolbar_shadow_size"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.google.android.apps.photos:id/toolbar_container"
        android:background="@*android:color/primary_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@*com.google.android.apps.photos:id/notification_bar_spacer"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip" />

        <android.support.v7.widget.Toolbar
            android:id="@*com.google.android.apps.photos:id/toolbar"
            android:background="@*android:color/primary_material_dark"
            android:layout_width="fill_parent"
            android:layout_height="@*com.google.android.apps.photos:dimen/abc_action_bar_default_height_material"
            style="@*com.google.android.apps.photos:style/Theme.Arkham.ActionBar" />
    </LinearLayout>

    <FrameLayout
        android:id="@*com.google.android.apps.photos:id/hanging_view_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</FrameLayout>