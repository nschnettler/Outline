<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@*com.google.android.apps.plus:id/navigation_drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@*com.google.android.apps.plus:id/navigation_appbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:elevation="0.0dip">

            <android.support.v7.widget.Toolbar
                android:id="@*com.google.android.apps.plus:id/navigation_toolbar"
                android:background="?android:colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:actionBarSize"
                app:popupTheme="@*com.google.android.apps.plus:style/Theme.ArkhamLight"
                app:layout_scrollFlags="enterAlways|scroll"
                app:titleTextAppearance="@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.Text"
                app:theme="@*com.google.android.apps.plus:style/Theme.ArkhamDark" />
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@*com.google.android.apps.plus:id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_behavior="@*com.google.android.apps.plus:string/appbar_scrolling_view_behavior" />

        <include layout="@*com.google.android.apps.plus:layout/bottom_bar_and_fab" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        android:id="@*com.google.android.apps.plus:id/navigation_view"
        android:background="@*android:color/background_material_dark"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
</android.support.v4.widget.DrawerLayout>