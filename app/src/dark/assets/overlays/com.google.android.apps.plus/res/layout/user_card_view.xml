<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.plus.cards.user.UserCardView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.toolkit.mediaview.avatar.AvatarView
        android:layout_gravity="center"
        android:id="@*com.google.android.apps.plus:id/avatar"
        android:padding="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@*com.google.android.apps.plus:dimen/user_card_standard_padding"
        android:importantForAccessibility="noHideDescendants" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@*com.google.android.apps.plus:id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:id="@*com.google.android.apps.plus:id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />

        <TextView
            android:ellipsize="end"
            android:id="@*com.google.android.apps.plus:id/subtext"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />
    </LinearLayout>
</com.google.android.apps.plus.cards.user.UserCardView>