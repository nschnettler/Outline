<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Bar -->
<LinearLayout android:orientation="horizontal"
    android:background="@*android:color/background_material_dark"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@*com.google.android.apps.plus:id/navigation_home"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:text="@*com.google.android.apps.plus:string/home_navigation_item"
        android:drawableTop="@*com.google.android.apps.plus:drawable/quantum_ic_home_white_24"
        android:layout_weight="1.0"
        android:contentDescription="@*com.google.android.apps.plus:string/home_navigation_item"
        style="@*com.google.android.apps.plus:style/BottomBarItemVertical" />

    <TextView
        android:id="@*com.google.android.apps.plus:id/navigation_collections"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:text="@*com.google.android.apps.plus:string/collections_navigation_item"
        android:drawableTop="@*com.google.android.apps.plus:drawable/quantum_ic_google_collections_white_24"
        android:layout_weight="1.0"
        android:contentDescription="@*com.google.android.apps.plus:string/collections_navigation_item"
        style="@*com.google.android.apps.plus:style/BottomBarItemVertical" />

    <TextView
        android:id="@*com.google.android.apps.plus:id/navigation_discover"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:text="@*com.google.android.apps.plus:string/discover_navigation_item"
        android:drawableTop="@*com.google.android.apps.plus:drawable/quantum_ic_explore_white_24"
        android:layout_weight="1.0"
        android:contentDescription="@*com.google.android.apps.plus:string/discover_navigation_item"
        style="@*com.google.android.apps.plus:style/BottomBarItemVertical" />

    <TextView
        android:id="@*com.google.android.apps.plus:id/navigation_communities"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:text="@*com.google.android.apps.plus:string/communities_navigation_item"
        android:drawableTop="@*com.google.android.apps.plus:drawable/quantum_ic_communities_white_24"
        android:layout_weight="1.0"
        android:contentDescription="@*com.google.android.apps.plus:string/communities_navigation_item"
        style="@*com.google.android.apps.plus:style/BottomBarItemVertical" />

    <TextView
        android:id="@*com.google.android.apps.plus:id/navigation_profile"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:text="@*com.google.android.apps.plus:string/profile_navigation_item"
        android:drawableTop="@*com.google.android.apps.plus:drawable/quantum_ic_account_circle_white_24"
        android:layout_weight="1.0"
        android:contentDescription="@*com.google.android.apps.plus:string/profile_navigation_item"
        style="@*com.google.android.apps.plus:style/BottomBarItemVertical" />

    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:id="@*com.google.android.apps.plus:id/navigation_notifications"
        android:background="@*com.google.android.apps.plus:drawable/bottom_bar_item_ripple"
        android:paddingTop="@*com.google.android.apps.plus:dimen/navigation_bar_y_top_padding"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.apps.plus:dimen/navigation_bar_height_vertical"
        android:layout_weight="1.0">

        <FrameLayout
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip">

            <ImageView
                android:layout_gravity="center"
                android:id="@*com.google.android.apps.plus:id/navigation_notifications_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.google.android.apps.plus:drawable/quantum_ic_notifications_white_24"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@*com.google.android.apps.plus:id/navigation_notifications_count"
                android:visibility="gone"
                android:importantForAccessibility="no"
                style="@*com.google.android.apps.plus:style/BottomBarNotificationCounter" />
        </FrameLayout>

        <TextView
            android:textSize="@*com.google.android.apps.plus:dimen/text_size_12"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@*com.google.android.apps.plus:id/navigation_notifications_text"
            android:paddingTop="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.google.android.apps.plus:string/notifications_navigation_item"
            android:singleLine="true" />
    </LinearLayout>
</LinearLayout>