<?xml version="1.0" encoding="utf-8"?>
<!-- Channel: About -->
<LinearLayout android:orientation="vertical"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="@*android:color/background_dark"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="16.0dip" />

    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
        android:textColor="#FFFFFF"
        android:id="@*com.google.android.youtube:id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:includeFontPadding="false"
        android:textIsSelectable="false"
        android:textAlignment="viewStart"
        res-auto:robotoFont="regular"
        xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
        android:textColor="#b3FFFFFF"
        android:id="@*com.google.android.youtube:id/joined_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:includeFontPadding="false"
        android:textIsSelectable="false"
        android:textAlignment="viewStart"
        res-auto:robotoFont="regular"
        xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.google.android.youtube:id/links"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip" />

    <View
        android:id="@*com.google.android.youtube:id/description_separator"
        android:background="@*android:color/background_dark"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:baselineAligned="false">

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@*com.google.android.youtube:id/views"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_weight="1.0"
            android:textIsSelectable="false"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <View
            android:id="@*com.google.android.youtube:id/stats_separator"
            android:background="@*android:color/background_dark"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@*com.google.android.youtube:id/subscribers"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_weight="1.0"
            android:textIsSelectable="false"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>
</LinearLayout>