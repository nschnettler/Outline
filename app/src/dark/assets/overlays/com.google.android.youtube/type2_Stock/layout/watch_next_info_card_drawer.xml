<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="end"
    android:background="@*android:color/background_material_dark"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@*com.google.android.youtube:id/ad_badge_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_alignBottom="@*com.google.android.youtube:id/info_card_drawer_title"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8.0dip">

        <include
            android:layout_gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/ad_badge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginStart="8.0dip"
            layout="@*com.google.android.youtube:layout/ad_badge_small" />
    </FrameLayout>

    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
        android:textColor="@*com.google.android.youtube:color/info_card_youtube_black_light"
        android:ellipsize="end"
        android:gravity="start|center"
        android:id="@*com.google.android.youtube:id/info_card_drawer_title"
        android:paddingLeft="8.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:maxLines="1"
        android:layout_toLeftOf="@*com.google.android.youtube:id/close"
        android:layout_toRightOf="@*com.google.android.youtube:id/ad_badge_container"
        android:paddingStart="8.0dip"
        android:paddingEnd="16.0dip"
        android:layout_toStartOf="@*com.google.android.youtube:id/close"
        android:layout_toEndOf="@*com.google.android.youtube:id/ad_badge_container"
        res-auto:robotoFont="regular"
        xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

    <ImageButton
        android:layout_gravity="end|center|top"
        android:id="@*com.google.android.youtube:id/close"
        android:background="?actionBarItemBackground"
        android:padding="14.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="4.0dip"
        android:src="@*com.google.android.youtube:drawable/ic_search_clear"
        android:scaleType="centerInside"
        android:layout_alignBottom="@*com.google.android.youtube:id/info_card_drawer_title"
        android:layout_alignParentRight="true"
        android:contentDescription="@*com.google.android.youtube:string/accessibility_annotation_overlay_info_cards_drawer_dismiss"
        android:layout_marginEnd="4.0dip"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:scrollbarStyle="outsideOverlay"
        android:id="@*com.google.android.youtube:id/info_cards"
        android:paddingLeft="@*com.google.android.youtube:dimen/card_drawer_watch_next_spacing"
        android:paddingTop="2.0dip"
        android:paddingRight="@*com.google.android.youtube:dimen/card_drawer_watch_next_spacing"
        android:paddingBottom="@*com.google.android.youtube:dimen/card_drawer_watch_next_spacing"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@*com.google.android.youtube:dimen/card_drawer_watch_next_spacing"
        android:layout_below="@*com.google.android.youtube:id/info_card_drawer_title" />
</RelativeLayout>