<?xml version="1.0" encoding="utf-8"?>
<!-- Video Item: Compact (search, next Video,...) -->
<LinearLayout android:gravity="top"
    android:orientation="horizontal"
    android:id="@*com.google.android.youtube:id/video_info_view"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="4.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@*com.google.android.youtube:id/thumbnail_layout"
        android:layout_width="@*com.google.android.youtube:dimen/list_item_thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="@*com.google.android.youtube:dimen/compact_video_thumbnail_margin"
        android:layout_marginBottom="4.0dip"
        android:layout_marginEnd="@*com.google.android.youtube:dimen/compact_video_thumbnail_margin"
        layout="@*com.google.android.youtube:layout/video_thumbnail_layout" />

    <RelativeLayout
        android:id="@*com.google.android.youtube:id/text_layout"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <include
            android:id="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="2.0dip"
            android:layout_alignParentEnd="true"
            layout="@*com.google.android.youtube:layout/contextual_menu_anchor" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/standalone_collection_badge"
            android:layout="@*com.google.android.youtube:layout/standalone_collection_badge"
            android:inflatedId="@*com.google.android.youtube:id/standalone_collection_badge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@*com.google.android.youtube:dimen/collection_badge_bottom_margin"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/small_font_size"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/title"
            android:paddingBottom="@*com.google.android.youtube:dimen/compact_renderer_title_bottom_padding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="@*com.google.android.youtube:integer/compact_renderer_title_max_lines"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_below="@*com.google.android.youtube:id/standalone_collection_badge"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?textAppearanceBody1"
            android:textSize="@*com.google.android.youtube:dimen/compact_renderer_metadata_text_size"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_below="@*com.google.android.youtube:id/title"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/sc_badge"
            android:layout="@*com.google.android.youtube:layout/sc_badge"
            android:inflatedId="@*com.google.android.youtube:id/sc_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_below="@*com.google.android.youtube:id/author"
            android:layout_marginEnd="4.0dip" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?textAppearanceBody1"
            android:textSize="@*com.google.android.youtube:dimen/compact_renderer_metadata_text_size"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/details"
            android:paddingBottom="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
            android:includeFontPadding="false"
            android:layout_toRightOf="@*com.google.android.youtube:id/sc_badge"
            android:layout_below="@*com.google.android.youtube:id/author"
            android:textAlignment="viewStart"
            android:layout_toEndOf="@*com.google.android.youtube:id/sc_badge"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/text_badge"
            android:layout="@*com.google.android.youtube:layout/text_badge"
            android:inflatedId="@*com.google.android.youtube:id/text_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_below="@*com.google.android.youtube:id/details"
            android:layout_marginEnd="4.0dip" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/standalone_red_badge"
            android:layout="@*com.google.android.youtube:layout/standalone_red_badge"
            android:inflatedId="@*com.google.android.youtube:id/standalone_red_badge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_toRightOf="@*com.google.android.youtube:id/text_badge"
            android:layout_below="@*com.google.android.youtube:id/details"
            android:layout_marginEnd="4.0dip"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_toEndOf="@*com.google.android.youtube:id/text_badge" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/privacy_badge"
            android:layout="@*com.google.android.youtube:layout/privacy_badge"
            android:inflatedId="@*com.google.android.youtube:id/privacy_badge"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_below="@*com.google.android.youtube:id/text_badge"
            android:layout_marginEnd="4.0dip" />

        <ViewStub
            android:id="@*com.google.android.youtube:id/standalone_ypc_badge"
            android:layout="@*com.google.android.youtube:layout/standalone_ypc_badge"
            android:inflatedId="@*com.google.android.youtube:id/standalone_ypc_badge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_below="@*com.google.android.youtube:id/privacy_badge"
            android:layout_marginEnd="4.0dip"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor" />
    </RelativeLayout>
</LinearLayout>