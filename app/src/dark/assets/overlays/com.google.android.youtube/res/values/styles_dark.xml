<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stream to TV: Divider Style -->
    <style name="Mdx.PrefsSeparator" parent="@*com.google.android.youtube:style/Mdx">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.Dark" parent="@*com.google.android.youtube:style/Platform.ThemeOverlay.AppCompat.Dark">
        <item name="android:colorForeground">@*android:color/white</item>
        <item name="android:colorBackground">@*android:color/background_dark</item>
        <item name="android:textColorPrimary">@*com.google.android.youtube:color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@*com.google.android.youtube:color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorSecondary">@*com.google.android.youtube:color/abc_secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@*com.google.android.youtube:color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@*com.google.android.youtube:color/abc_secondary_text_material_light</item>
        <item name="android:textColorHintInverse">@*com.google.android.youtube:color/abc_hint_foreground_material_light</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:textColorHighlight">@*com.google.android.youtube:color/highlighted_text_material_dark</item>
        <item name="android:textColorHint">@*com.google.android.youtube:color/abc_hint_foreground_material_dark</item>
        <item name="android:colorForegroundInverse">@*com.google.android.youtube:color/foreground_material_light</item>
        <item name="android:textColorTertiary">@*com.google.android.youtube:color/abc_secondary_text_material_dark</item>
        <item name="android:textColorTertiaryInverse">@*com.google.android.youtube:color/abc_secondary_text_material_light</item>
        <item name="android:colorBackgroundCacheHint">@*com.google.android.youtube:color/abc_background_cache_hint_selector_material_dark</item>
        <item name="*com.google.android.youtube:isLightTheme">false</item>
        <item name="*com.google.android.youtube:colorControlNormal">@*android:color/white</item>
        <item name="*com.google.android.youtube:colorControlHighlight">@*android:color/ripple_material_dark</item>
        <item name="*com.google.android.youtube:colorButtonNormal">@*android:color/white</item>
        <item name="*com.google.android.youtube:colorSwitchThumbNormal">@*com.google.android.youtube:color/switch_thumb_material_dark</item>
        <item name="*com.google.android.youtube:colorBackgroundFloating">@*android:color/background_floating_material_dark</item>
    </style>

    <!-- Some Texts -->
    <style name="TextAppearance.YouTube.Body1.Inverse" parent="@*com.google.android.youtube:style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
    <style name="TextAppearance.YouTube.Subhead.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Subhead"/>
    <style name="TextAppearance.YouTube.Title.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Title"/>
    <style name="TextAppearance.YouTube.Caption.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
</resources>
