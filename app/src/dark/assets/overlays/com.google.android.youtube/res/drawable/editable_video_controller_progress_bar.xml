<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:gravity="left" android:shape="rectangle">
            <corners android:radius="0.0dip" />
            <solid android:color="@*android:color/background_floating_material_dark" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="0.0dip" />
                <solid android:color="#ffdddddd" />
            </shape>
        </clip>
    </item>
</layer-list>