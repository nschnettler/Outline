<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme (-> Dark) -->
    <style name="Theme.YouTube.Light" parent="@*com.google.android.youtube:style/Base.V27.Theme.YouTube.Dark" >
        <item name="*com.google.android.youtube:actionBarSize">56dp</item>
    </style>
    <!-- Dialog -->
    <style name="Base.V27.Theme.YouTube.Light.Dialog" parent="@*com.google.android.youtube:style/Base.V23.Theme.YouTube.Dark.Dialog">
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/background_dark</item>
    </style>
    <!-- Share Dialog -->
    <style name="Base.V27.Theme.YouTube.Share.DialogFragment" parent="@*com.google.android.youtube:style/Base.Theme.YouTube.Share.DialogFragment">
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/background_dark</item>
    </style>
</resources>