<?xml version="1.0" encoding="utf-8"?>
<!-- Account Selector -->
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="24.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="24.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/large_font_size"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@*com.google.android.youtube:string/account_switcher_header_title"
            android:maxLines="1"
            android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
            android:layout_weight="1.0"
            android:textAlignment="viewStart"
            res-auto:robotoFont="medium"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <ImageView
            android:id="@*com.google.android.youtube:id/add_account"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginRight="-18.0dip"
            android:src="@*com.google.android.youtube:drawable/ic_account_switcher_add"
            android:scaleType="center"
            android:contentDescription="@*com.google.android.youtube:string/account_switcher_add_account"
            android:layout_marginEnd="-18.0dip" />
    </LinearLayout>

    <ListView
        android:id="@*com.google.android.youtube:id/account_list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:divider="@null"
        android:layout_weight="1.0" />

    <ListView
        android:id="@*com.google.android.youtube:id/account_list_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <com.google.android.libraries.youtube.common.ui.YouTubeTextView
        android:textColor="@*com.google.android.youtube:color/account_switcher_color_secondary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@*com.google.android.youtube:id/sign_out_footer"
        android:background="?selectableItemBackground"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="48.0dip"
        android:text="@*com.google.android.youtube:string/account_switcher_sign_out"
        android:maxLines="1"
        android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
        android:textAlignment="viewStart"
        style="?textAppearanceSubhead" />
</LinearLayout>