<?xml version="1.0" encoding="utf-8"?>
<com.google.android.libraries.youtube.conversation.ui.ConversationRoundedLinearLayout android:orientation="vertical"
    android:id="@*com.google.android.youtube:id/chat_bubble_content"
    android:backgroundTint="@*android:color/background_dark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4.0dip"
    res-auto:sharpCorners="4.0dip"
    res-auto:corners="16.0dip"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    _xmlns:tools="http://schemas.android.com/tools"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res-auto="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@*com.google.android.youtube:id/player_reference"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout
            android:id="@*com.google.android.youtube:id/video_thumbnail_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@*com.google.android.youtube:dimen/conversation_timebar_space"
            res-auto:aspectRatio="@*com.google.android.youtube:fraction/conversation_aspect_ratio_16_9">

            <ImageView
                android:id="@*com.google.android.youtube:id/video_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@*com.google.android.youtube:string/accessibility_video_thumbnail" />

            <com.google.android.libraries.youtube.common.ui.YouTubeTextView
                android:textColor="@*com.google.android.youtube:color/white"
                android:id="@*com.google.android.youtube:id/unplayable_video_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@*com.google.android.youtube:id/play_button"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@*com.google.android.youtube:drawable/quantum_ic_play_arrow_white_24"
                android:layout_centerInParent="true" />
        </com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout>
    </RelativeLayout>

    <Space
        android:id="@*com.google.android.youtube:id/timebar_space"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="@*com.google.android.youtube:dimen/conversation_timebar_space" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@*com.google.android.youtube:id/video_metadata_container"
        android:backgroundTint="@*android:color/background_dark"
        android:paddingLeft="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@*com.google.android.youtube:dimen/conversation_timebar_space_negative"
        android:paddingStart="16.0dip">

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@*com.google.android.youtube:color/conversation_primary_text_color"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="8.0dip"
            android:maxLines="1"
            android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
            android:includeFontPadding="false"
            android:layout_weight="1.0"
            android:textAlignment="viewStart"
            android:layout_marginEnd="8.0dip" />

        <ImageView
            android:id="@*com.google.android.youtube:id/incept"
            android:background="?selectableItemBackground"
            android:paddingLeft="8.0dip"
            android:paddingTop="6.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:src="@*com.google.android.youtube:drawable/ic_incept"
            android:contentDescription="@*com.google.android.youtube:string/accessibility_incept_button" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@*com.google.android.youtube:id/conversation_facepile_container"
        android:background="?selectableItemBackground"
        android:paddingRight="16.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16.0dip">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="14.0dip"
            android:layout_height="14.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginBottom="2.0dip"
            android:src="@*com.google.android.youtube:drawable/ic_heart_full"
            android:contentDescription="@*com.google.android.youtube:string/accessibility_heart_icon_empty"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="4.0dip" />

        <com.google.android.libraries.youtube.conversation.ui.FacePileView
            android:id="@*com.google.android.youtube:id/conversation_facepile"
            android:layout_width="wrap_content"
            android:layout_height="@*com.google.android.youtube:dimen/conversation_facepile_border_size"
            res-auto:itemSize="18.0dip"
            res-auto:itemOffset="13.0dip"
            res-auto:facePileStrokeWidth="2.0dip" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView
            android:textAppearance="?textAppearanceCaption"
            android:id="@*com.google.android.youtube:id/overflow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginStart="2.0dip" />
    </LinearLayout>
</com.google.android.libraries.youtube.conversation.ui.ConversationRoundedLinearLayout>