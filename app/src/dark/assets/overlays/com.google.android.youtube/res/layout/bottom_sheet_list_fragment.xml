<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Sheet -->
<LinearLayout android:orientation="vertical"
    android:paddingBottom="@*com.google.android.youtube:dimen/bottom_sheet_padding_bottom"
    android:background="@*android:color/background_material_dark"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:gravity="start|center"
        android:id="@*com.google.android.youtube:id/bottom_sheet_title"
        android:paddingLeft="@*com.google.android.youtube:dimen/default_content_padding"
        android:paddingRight="@*com.google.android.youtube:dimen/default_content_padding"
        android:layout_width="fill_parent"
        android:layout_height="@*com.google.android.youtube:dimen/bottom_sheet_title_height"
        style="@*com.google.android.youtube:style/BottomSheetTitleText" />

    <ListView
        android:id="@*com.google.android.youtube:id/bottom_sheet_list_view"
        android:padding="0.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:dividerHeight="0.0dip" />
</LinearLayout>