<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@*com.google.android.youtube:id/reply_view"
    android:background="@*android:color/background_material_dark"
    android:paddingRight="4.0dip"
    android:layout_width="fill_parent"
    android:layout_height="@*com.google.android.youtube:dimen/conversation_reply_view_init_height"
    android:paddingEnd="4.0dip"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.youtube.share.ui.ContactImageHolder
        android:id="@*com.google.android.youtube:id/reply_user_thumbnail"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="8.0dip"
        android:contentDescription="@*com.google.android.youtube:string/accessibility_user_image" />

    <FrameLayout
        android:layout_gravity="fill_vertical"
        android:id="@*com.google.android.youtube:id/edit_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@*com.google.android.youtube:dimen/conversation_reply_view_init_height"
        android:layout_toLeftOf="@*com.google.android.youtube:id/search_button"
        android:layout_toRightOf="@*com.google.android.youtube:id/reply_user_thumbnail"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toStartOf="@*com.google.android.youtube:id/search_button"
        android:layout_toEndOf="@*com.google.android.youtube:id/reply_user_thumbnail">

        <EditText
            android:textSize="16.0sp"
            android:textColorHint="@*com.google.android.youtube:color/hint_color"
            android:textColorLink="@*com.google.android.youtube:color/quantum_googblue"
            android:layout_gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/edit_text"
            android:background="@*android:color/background_material_dark"
            android:paddingTop="@*com.google.android.youtube:dimen/conversation_reply_text_padding"
            android:paddingBottom="@*com.google.android.youtube:dimen/conversation_reply_text_padding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:inputType="textCapSentences|textMultiLine|textShortMessage"
            android:imeOptions="actionSend" />
    </FrameLayout>

    <com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout android:id="@*com.google.android.youtube:id/attachment_container"
        android:visibility="gone"
        android:layout_width="205.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_below="@*com.google.android.youtube:id/edit_container"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="56.0dip"
        android:layout_alignParentStart="true"
        res-auto:aspectRatio="@*com.google.android.youtube:fraction/conversation_aspect_ratio_16_9"
        xmlns:res-auto="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@*com.google.android.youtube:id/attachment_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="15.0dip"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15.0dip" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView
            android:textSize="15.0sp"
            android:textColor="@*com.google.android.youtube:color/white"
            android:gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/attachment_video_title"
            android:background="@*com.google.android.youtube:drawable/attachment_title_background"
            android:paddingLeft="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginRight="15.0dip"
            android:maxLines="1"
            android:singleLine="@*com.google.android.youtube:bool/rtl_single_line_true"
            android:layout_alignParentBottom="true"
            android:paddingStart="8.0dip"
            android:layout_marginEnd="15.0dip" />

        <ImageView
            android:id="@*com.google.android.youtube:id/remove_attachment"
            android:background="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@*com.google.android.youtube:drawable/ic_remove_circle_black"
            android:layout_alignParentRight="true"
            android:contentDescription="@*com.google.android.youtube:string/accessibility_remove_attachment"
            android:layout_alignParentEnd="true" />
    </com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout>

    <ImageView
        android:layout_gravity="top"
        android:id="@*com.google.android.youtube:id/search_button"
        android:background="?selectableItemBackground"
        android:visibility="gone"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginLeft="4.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="-1.0dip"
        android:src="@*com.google.android.youtube:drawable/ic_add_video"
        android:scaleType="center"
        android:layout_toLeftOf="@*com.google.android.youtube:id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:contentDescription="@*com.google.android.youtube:string/accessibility_reply_search_button"
        android:layout_marginStart="4.0dip"
        android:layout_toStartOf="@*com.google.android.youtube:id/send_button" />

    <ImageView
        android:layout_gravity="top"
        android:id="@*com.google.android.youtube:id/send_button"
        android:background="?selectableItemBackground"
        android:visibility="gone"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginLeft="4.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="1.0dip"
        android:src="@*com.google.android.youtube:drawable/ic_send_active"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@*com.google.android.youtube:string/accessibility_send_button"
        android:layout_marginStart="4.0dip"
        android:layout_alignParentEnd="true" />
</RelativeLayout>