<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.android.chrome"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@*android:color/background_floating_material_dark">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/page_info_popup_padding_sides">

        <view
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackTitle1"
            android:ellipsize="end"
            android:id="@*com.android.chrome:id/page_info_url"
            android:paddingTop="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6.0dip"
            android:textAlignment="viewStart"
            class="org.chromium.chrome.browser.page_info.PageInfoView$ElidedUrlTextView" />

        <TextView
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackTitle1"
            android:id="@*com.android.chrome:id/page_info_connection_summary"
            android:paddingTop="16.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3.0dip" />

        <TextView
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackBodyDefault"
            android:id="@*com.android.chrome:id/page_info_connection_message"
            android:paddingTop="8.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3.0dip" />

        <View
            android:id="@*com.android.chrome:id/page_info_separator"
            android:visibility="gone"
            android:layout_marginTop="16.0dip"
            style="@*com.android.chrome:style/HorizontalDivider" />

        <TextView
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackTitle1"
            android:id="@*com.android.chrome:id/page_info_preview_message"
            android:paddingTop="14.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.android.chrome:string/page_info_preview_message" />

        <TextView
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackCaption"
            android:id="@*com.android.chrome:id/page_info_stale_preview_timestamp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@*com.android.chrome:style/TextAppearance.BlackTitle1"
            android:id="@*com.android.chrome:id/page_info_preview_load_original"
            android:paddingTop="12.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <org.chromium.ui.widget.ButtonCompat
        android:layout_gravity="start"
        android:id="@*com.android.chrome:id/page_info_instant_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="4.0dip"
        android:text="@*com.android.chrome:string/page_info_instant_app_button"
        android:paddingStart="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:layout_marginStart="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        android:layout_marginEnd="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        app:buttonColor="@*com.android.chrome:color/app_banner_install_button_bg"
        style="@*com.android.chrome:style/FilledButton" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.android.chrome:id/page_info_permissions_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/page_info_popup_padding_sides" />

    <org.chromium.ui.widget.ButtonCompat
        android:layout_gravity="end"
        android:id="@*com.android.chrome:id/page_info_site_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="@*com.android.chrome:dimen/page_info_popup_button_height"
        android:layout_marginTop="8.0dip"
        android:text="@*com.android.chrome:string/page_info_site_settings_button"
        android:paddingStart="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:layout_marginStart="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        android:layout_marginEnd="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        style="@*com.android.chrome:style/TextButton" />

    <org.chromium.ui.widget.ButtonCompat
        android:layout_gravity="end"
        android:id="@*com.android.chrome:id/page_info_open_online_button"
        android:layout_width="wrap_content"
        android:layout_height="@*com.android.chrome:dimen/page_info_popup_button_height"
        android:layout_marginTop="8.0dip"
        android:text="@*com.android.chrome:string/page_info_open_online_button"
        android:paddingStart="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/page_info_popup_button_padding_sides"
        android:layout_marginStart="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        android:layout_marginEnd="@*com.android.chrome:dimen/page_info_popup_padding_sides"
        style="@*com.android.chrome:style/TextButton" />
</LinearLayout>