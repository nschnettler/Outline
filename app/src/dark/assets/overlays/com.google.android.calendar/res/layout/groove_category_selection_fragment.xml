<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@*com.google.android.calendar:id/inset_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@*com.google.android.calendar:id/action_bar"
        android:background="@*android:color/primary_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include layout="@*com.google.android.calendar:layout/back_button" />

        <TextView
            android:textSize="@*com.google.android.calendar:dimen/groove_action_bar_text_size"
            android:textColor="@*com.google.android.calendar:color/groove_store_title_color"
            android:layout_gravity="start|center"
            android:id="@*com.google.android.calendar:id/action_bar_title_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@*com.google.android.calendar:string/groove_title"
            android:layout_marginStart="@*com.google.android.calendar:dimen/groove_action_bar_text_margin_start" />
    </FrameLayout>

    <com.google.android.calendar.groove.ObservableScrollView
        android:id="@*com.google.android.calendar:id/category_scroll_view"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@*android:color/background_material_dark">

        <LinearLayout
            android:orientation="vertical"
            android:id="@*com.google.android.calendar:id/category_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@*com.google.android.calendar:id/store_header"
                android:background="@*com.google.android.calendar:color/store_header_background_color"
                android:layout_width="fill_parent"
                android:layout_height="@*com.google.android.calendar:dimen/groove_store_header_height">

                <TextView
                    android:textSize="@*com.google.android.calendar:dimen/groove_store_title_text_size"
                    android:textColor="@*com.google.android.calendar:color/groove_store_title_color"
                    android:id="@*com.google.android.calendar:id/store_title"
                    android:paddingLeft="@*com.google.android.calendar:dimen/groove_store_header_padding_horizontal"
                    android:paddingRight="@*com.google.android.calendar:dimen/groove_store_header_padding_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@*com.google.android.calendar:string/groove_category_selection_title" />

                <TextView
                    android:textSize="@*com.google.android.calendar:dimen/groove_store_description_text_size"
                    android:textColor="@*com.google.android.calendar:color/default_dark_grey_text_color"
                    android:paddingLeft="@*com.google.android.calendar:dimen/groove_store_header_padding_horizontal"
                    android:paddingRight="@*com.google.android.calendar:dimen/groove_store_header_padding_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@*com.google.android.calendar:string/groove_category_selection_description" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.calendar.groove.ObservableScrollView>
</RelativeLayout>