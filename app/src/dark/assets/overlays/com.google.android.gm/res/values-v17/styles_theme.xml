<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- New Mail - Background -->
    <style name="AbstractComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:paddingLeft">@*com.google.android.gm:dimen/compose_area_start_padding</item>
        <item name="android:paddingRight">@*com.google.android.gm:dimen/compose_area_end_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:paddingStart">@*com.google.android.gm:dimen/compose_area_start_padding</item>
        <item name="android:paddingEnd">@*com.google.android.gm:dimen/compose_area_end_padding</item>
    </style>

    <!-- New Mail - Recipient Suggestion Background -->
    <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">@*android:style/TextAppearance.Medium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">@*android:color/background_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>